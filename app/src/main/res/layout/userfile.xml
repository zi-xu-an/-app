<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/userfile_back"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:padding="10dip"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人资料"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="?attr/selectableItemBackground"
                android:text="保存"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:background="@drawable/image_4">


        <LinearLayout
            style="@style/wrap_layout"
            android:translationY="20dp"
            android:layout_width="350dp"
            android:layout_height="550dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF">

            <!-- 上圆角-->
            <LinearLayout
                android:id="@+id/head"
                android:layout_height="wrap_content"
                style="@style/top_layout"
                android:background="#00FFFFFF">

                <TextView
                    style="@style/usertext"
                    android:text="  头像"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/headchange"
                    android:src="@drawable/image_6"/>
            </LinearLayout>

            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF">
                <TextView
                    style="@style/usertext"
                    android:text="  昵称"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="24dp"
                    android:id="@+id/nicheng"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout"
                android:id="@+id/sex"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF">
                <TextView
                    style="@style/usertext"
                    android:text="  性别"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="24dp"
                    android:id="@+id/xingbie"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout"
                android:id="@+id/user"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF">
                <TextView
                    style="@style/usertext"
                    android:text="用户名"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="24dp"
                    android:id="@+id/usernames"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                style="@style/bg_line"
                android:layout_height="3px"
                android:translationY="30dp"/>

            <!-- 全圆角-->
            <LinearLayout style="@style/single_layout"
                android:id="@+id/mypossion"
                android:layout_height="wrap_content"
                android:translationY="30dp"
                android:background="#00FFFFFF">
                <TextView
                    style="@style/usertext"
                    android:text="我的定位"
                    android:textSize="20dp"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>

            <!-- 全圆角-->
            <LinearLayout style="@style/single_layout"
                android:id="@+id/changepassword"
                android:layout_height="wrap_content"
                android:translationY="40dp"
                android:background="#00FFFFFF">
                <TextView
                    style="@style/usertext"
                    android:text="修改密码"
                    android:textSize="20dp"/>
                <ImageView style="@style/img_arrow"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>