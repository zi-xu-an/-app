<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="25dp"
        android:translationX="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享种类："
            android:textSize="20dp"/>

    </LinearLayout>
    <!-- 分割线 -->
    <View
        android:translationY="30dp"
        style="@style/bg_line"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="5px"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationY="30dp">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="110dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/bIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/book"
                android:translationX="10dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书籍"
                android:textSize="20sp"
                android:translationX="-40dp"
                android:translationY="80dp" />

            <ImageButton
                android:id="@+id/eIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ep"
                android:translationX="20dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子产品"
                android:textSize="20sp"
                android:translationX="-50dp"
                android:translationY="80dp" />

            <ImageButton
                android:id="@+id/seIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/sports_equipment"
                android:translationX="-15dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="26dp"
                android:text="运动器材"
                android:textSize="20sp"
                android:translationX="-80dp"
                android:translationY="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/uIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/umbrella"
                android:translationX="10dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雨伞"
                android:textSize="20sp"
                android:translationX="-40dp"
                android:translationY="80dp" />


            <ImageButton
                android:id="@+id/heIB"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/household_electrical_appliances"
                android:translationX="30dp"
                android:translationY="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家电"
                android:textSize="20sp"
                android:translationX="-10dp"
                android:translationY="80dp" />

            <ImageButton
                android:id="@+id/cbIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/clothes_bag"
                android:translationX="50dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="33dp"
                android:text="衣服包包"
                android:textSize="20sp"
                android:translationX="-20dp"
                android:translationY="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/vIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/vehicle"
                android:translationX="10dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交通工具"
                android:textSize="20sp"
                android:translationX="-60dp"
                android:translationY="80dp" />


            <ImageButton
                android:id="@+id/pIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/pets"
                android:translationX="-20dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物"
                android:textSize="20sp"
                android:translationX="-65dp"
                android:translationY="80dp" />

            <ImageButton
                android:id="@+id/oIB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/other_idle"
                android:translationX="-5dp"
                android:translationY="10dp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:text="其他闲置"
                android:textSize="20sp"
                android:translationX="-80dp"
                android:translationY="80dp" />

        </LinearLayout>

    </LinearLayout>
    <!-- 分割线 -->
    <View
        android:translationY="40dp"
        style="@style/bg_line"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="5px"/>

    <!-- 分割线 -->
    <View
        android:translationY="45dp"
        style="@style/bg_line"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="5px"/>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:translationY="55dp">

        <ImageButton
            android:id="@+id/btn_my_goods"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_my_goods"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的发布"
            android:textSize="20sp"
            android:translationY="70dp"
            android:translationX="-63dp"/>


        <ImageButton
            android:id="@+id/ib_add_product"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/add"
            android:translationX="-48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布宝贝"
            android:textSize="20sp"
            android:translationY="70dp"
            android:translationX="-115dp"/>

        <ImageButton
            android:id="@+id/btn_my_collection"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/my_love"
            android:translationX="-100dp"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="我的收藏"
            android:textSize="20sp"
            android:translationY="70dp"
            android:translationX="-165dp"/>

        <ImageButton
            android:id="@+id/all_IB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/all"
            android:translationX="-155dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="所有商品"
            android:textSize="20sp"
            android:translationY="70dp"
            android:translationX="-225dp"/>

    </LinearLayout>

</LinearLayout>